        <activity android:name=".view.activity.map.MapActivity" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyDDTJmTRy4nhpNAc5U3fyNanMin38mxduw" />

        <activity android:name=".view.activity.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.main.MainActivity" />
    </application>

</manifest>